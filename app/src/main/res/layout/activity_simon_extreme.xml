<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".simon_extreme">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Simon Extreme"
        android:textColor="@android:color/black"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:id="@+id/btn_green1"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:tag="1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:srcCompat="@drawable/button_green"></ImageView>

        <ImageView
            android:id="@+id/btn_red1"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_red"
            android:clickable="true"
            android:tag="2"

            ></ImageView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_line3">

        <ImageView
            android:id="@+id/btn_yellow1"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_yellow"
            android:clickable="true"
            android:gravity="center"
            android:tag="4"
            android:textColor="@android:color/white"
            android:textSize="20sp"></ImageView>

        <ImageView
            android:id="@+id/btn_blue1"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:clickable="true"
            android:gravity="center"
            android:tag="3"
            android:textColor="@android:color/white"
            android:textSize="20sp"></ImageView>
    </LinearLayout>
<Button
    android:id="@+id/btn_home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Restart"
    android:textSize="55sp"
    app:layout_constraintTop_toBottomOf="@id/ll_line3"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:visibility="invisible"
    />
    <LinearLayout
        android:id="@+id/ll_line7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_line4">


        <ImageView
            android:id="@+id/btn_orange1"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_orange"
            android:clickable="true"
            android:gravity="center"
            android:tag="5"
            android:textColor="@android:color/white"
            android:textSize="20sp"></ImageView>

        <ImageView
            android:id="@+id/btn_purple1"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_purple"
            android:clickable="true"
            android:gravity="center"
            android:tag="5"
            android:textColor="@android:color/white"
            android:textSize="20sp"></ImageView>


    </LinearLayout>
    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="55sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>